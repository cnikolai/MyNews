<LinearLayout
    android:id="@+id/fragment_page_param_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikolai.mynews.Controllers.Fragments.SearchResultsFragment"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/fragment_search_results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="There were no search results. Please try searching again with a different keyword!"/>

</LinearLayout>